@model IEnumerable<CompetitionSchedule.Models.RaceSchedule>

@{
    ViewData["Title"] = "Race Schedule";
}

<h1>Race Schedule</h1>

<p>
    <a asp-action="Create">Add a new race</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionDistances)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionDistances)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
